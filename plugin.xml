<?xml version='1.0' encoding='utf-8'?>
<plugin id="com.huchiwei.cordova.esptouch" version="0.0.1" 
    xmlns="http://apache.org/cordova/ns/plugins/1.0" 
    xmlns:android="http://schemas.android.com/apk/res/android">
    <name>cordova-esptouch</name>
    <js-module name="cordova-esptouch" src="www/cordova-esptouch.js">
        <clobbers target="cordova.plugins.cordova-esptouch" />
    </js-module>
    <platform name="android">
        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="cordova-esptouch">
                <param name="android-package" value="com.huchiwei.cordova.esptouch.cordova-esptouch" />
            </feature>
        </config-file>
        <config-file parent="/*" target="AndroidManifest.xml" />
        <source-file src="src/android/cordova-esptouch.java" target-dir="src/com/huchiwei/cordova/esptouch/cordova-esptouch" />
    </platform>
    <platform name="ios">
        <config-file parent="/*" target="config.xml">
            <feature name="cordova-esptouch">
                <param name="ios-package" value="cordova-esptouch" />
            </feature>
        </config-file>
        <source-file src="src/ios/cordova-esptouch.m" />
    </platform>
</plugin>